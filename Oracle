DECLARE 
  CURSOR C1 IS 
    SELECT JOB_TITLE, JOB_ID, MIN_SALARY
    FROM HR.JOBS 
    WHERE MIN_SALARY <0;

  vJOB_ID      HR.JOBS.JOB_ID%TYPE;
  vMIN_SALARY  HR.JOBS.MIN_SALARY%TYPE;
  vJOB_TITLE  HR.JOBS.JOB_TITLE%TYPE;

BEGIN
  OPEN C1;
 
  LOOP
    FETCH C1 INTO vJOB_TITLE, vJOB_ID, vMIN_SALARY;
    EXIT WHEN C1%NOTFOUND;

    DBMS_OUTPUT.PUT_LINE(vJOB_ID || ' ' || vJOB_TITLE || ' = sal = ' || vMIN_SALARY);
  END LOOP;

  CLOSE C1;

  IF C1%ROWCOUNT = 0 THEN
    DBMS_OUTPUT.PUT_LINE('No data found');
ELSE
    DBMS_OUTPUT.PUT_LINE('Total rows = ' || C1%ROWCOUNT);
END IF;

EXCEPTION
  WHEN NO_DATA_FOUND THEN
    DBMS_OUTPUT.PUT_LINE('No data found');
    
  WHEN OTHERS THEN
    DBMS_OUTPUT.PUT_LINE('Error while opening or fetching cursor: ' );
END;

